<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.recc.recc_client.layout.settings.SettingsViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".layout.settings.SettingsFragment">

        <TextView
            android:id="@+id/tv_spotify_scrobbler_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_spotify_title"
            android:gravity="center"
            style="@style/FormItem.HeaderText"
            tools:textColor="@color/black"
            tools:text="@string/settings_spotify_title"/>

        <Button
            android:id="@+id/btn_connect_spotify"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/FormItem.Button"
            android:layout_gravity="center"
            android:text="@string/cta_connect_to_spotify"
            tools:text="@string/cta_connect_to_spotify" />

        <TextView
            android:id="@+id/tv_recc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:text="@string/settings_recc_title"
            style="@style/FormItem.HeaderText"
            tools:textColor="@color/black"
            tools:text="@string/settings_recc_title"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/FormItem.Button"
            android:layout_gravity="center"
            android:text="@string/logout_cta"
            tools:text="@string/logout_cta" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
