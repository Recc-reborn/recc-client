<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="2dp"
        android:background="@drawable/bg_playlist_item"
        tools:context=".layout.recyclerview.items.PlaylistItemFragment">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/InfoBox.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_created_at"
            app:layout_constraintStart_toEndOf="@id/iv_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/hello_blank_fragment" />

        <TextView
            android:id="@+id/tv_created_at"
            style="@style/InfoBox.Subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_50"
            app:layout_constraintBottom_toTopOf="@+id/fb_tags"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            tools:text="@string/hello_blank_fragment" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fb_tags"
            style="@style/InfoBox.Subtext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/white_50"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:layout_constraintBottom_toBottomOf="@id/iv_image"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow_right"
            app:layout_constraintStart_toStartOf="@id/tv_created_at"
            app:layout_constraintTop_toBottomOf="@+id/tv_created_at" />

        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:background="@drawable/bg_arrow_circle"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_cyan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_baseline_keyboard_arrow_right_cyan" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>