<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="1dp"
        android:background="@drawable/bg_playlist_item"
        tools:context=".layout.recyclerview.items.PlaylistItemFragment">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/FormItem.Text"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/hello_blank_fragment" />

        <TextView
            android:id="@+id/tv_created_at"
            style="@style/FormItem.SubText"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_50"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toEndOf="@id/iv_image"
            tools:text="@string/hello_blank_fragment"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/fl_tags"
            style="@style/FormItem.SubText"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white_50"
            android:orientation="horizontal"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:layout_constraintTop_toBottomOf="@id/tv_created_at"
            app:layout_constraintStart_toEndOf="@id/iv_image"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow_right"/>

        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_arrow_circle"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_cyan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/ic_baseline_keyboard_arrow_right_cyan"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>