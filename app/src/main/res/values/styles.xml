<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--FormItem-->
    <style name="FormItem">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="FormItem.Title" parent="FormItem">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/bright_green</item>
    </style>

    <style name="FormItem.Subtitle" parent="FormItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/bright_green_text</item>
    </style>

    <style name="FormItem.Text" parent="FormItem">
        <item name="android:textSize">16sp</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:layout_marginEnd">@dimen/form_horizontal_padding</item>
        <item name="android:layout_marginStart">@dimen/form_horizontal_padding</item>
    </style>

    <style name="FormItem.SubText" parent="FormItem">
        <item name="android:textSize">11sp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="android:layout_marginEnd">@dimen/form_horizontal_padding</item>
        <item name="android:layout_marginStart">@dimen/form_horizontal_padding</item>
    </style>

    <style name="FormItem.HeaderText" parent="FormItem">
        <item name="android:textSize">22sp</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:layout_marginEnd">@dimen/form_horizontal_padding</item>
        <item name="android:layout_marginStart">@dimen/form_horizontal_padding</item>
    </style>

    <style name="FormItem.TextError" parent="FormItem.Text">
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">right</item>
        <item name="android:visibility">invisible</item>
        <item name="android:paddingEnd">@dimen/form_horizontal_padding</item>
        <item name="android:paddingStart">@dimen/form_horizontal_padding</item>
    </style>

    <style name="FormItem.TextClickable" parent="FormItem.Text">
        <item name="android:textColor">@color/bright_green_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FormItem.EditText" parent="FormItem.Text">
        <item name="android:textColor">@color/white</item>
        <!--Disables underline-->
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor_text</item>
    </style>

    <style name="FormItem.Container" parent="FormItem.Text">
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="FormItem.Button" parent="FormItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="FormItem.FloatingButton" parent="FormItem.Button">
        <item name="android:background">@drawable/bg_floating_button</item>
    </style>

    <style name="FormItem.DisabledFloatingButton" parent="FormItem.Button">
        <item name="android:background">@drawable/bg_disabled_floating_button</item>
    </style>

    <!--GridItem-->
    <style name="GridItem">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="GridItem.Text" parent="GridItem">
        <item name="android:color">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--InfoBox-->
    <style name="InfoBox">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="InfoBox.Title" parent="InfoBox">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InfoBox.Subtitle" parent="InfoBox">
        <item name="android:textSize">16sp</item>
        <item name="android:maxHeight">22dp</item>
    </style>

    <style name="InfoBox.Subtext" parent="InfoBox">
        <item name="android:textSize">14sp</item>
    </style>

</resources>