<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--FormItem-->
    <style name="FormItem">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="FormItem.Title" parent="FormItem">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/bright_green</item>
    </style>

    <style name="FormItem.Subtitle" parent="FormItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/bright_green_text</item>
    </style>

    <style name="FormItem.Text" parent="FormItem">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">@dimen/form_horizontal_padding</item>
        <item name="android:layout_marginStart">@dimen/form_horizontal_padding</item>
    </style>

    <style name="FormItem.TextError" parent="FormItem.Text">
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">right</item>
        <item name="android:visibility">invisible</item>
        <item name="android:paddingRight">@dimen/form_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/form_horizontal_padding</item>
    </style>

    <style name="FormItem.TextClickable" parent="FormItem.Text">
        <item name="android:textColor">@color/bright_green_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FormItem.EditText" parent="FormItem.Text">
        <item name="android:padding">@dimen/form_edit_text_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_color</item>
    </style>

    <style name="FormItem.Button" parent="FormItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

</resources>